<div class="container">
    <div class="row mt-5 p-0 m-0  col-md-12 ">
        {{#if herramientas}}
                <table class="table text.center table-hover table-bordered">
                <thead>
                    <tr class=" table-dark" >
                         <th scope="col" class="col-0">Id</th>
                        <th scope="col">TIPO HERRAMIENTA</th>
                        <th scope="col">MARCA</th>
                        <th scope="col">DESCRIPCION</th>
                        <th scope="col">FECHA INGRESO</th>
                        <th scope="col">ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                {{#each herramientas}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.tipoHerramienta}}</td>
                            <td>{{this.marca}}</td>
                            <td>{{this.descripcion}}</td>
                             <td>{{this.fechaIngreso}}</td>

                            <td>
                                <div class="btn.group">
                                    <a href="/editherramienta/{{id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/listherramientas/delete/{{id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                 {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-primary">
                        <td colspan="10" class="text-center">INVENTARIO DE HERRAMIENTA</td>
                    </tr>
                </tfoot>
            </table>
        
        {{else }}
            <div class="card text-center mx-auto" style="width:350px;">
                <div class="card-header">
                    <h3>Debes ingresar un lisado de herramientas</h3>
                </div>
                <div class="card-body">
                    <p>Ingresa aqui para registrar una nueva herramienta en la base de datos CONSTRUCIVIL.APP</p>
                    <a href="/" class="btn btn-success ">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>